{{#each posts as |post| }}
<div class="card">
      <div class="card-header d-flex justify-content-between">
        <div>{{post.title}}</div>
        <div>Posted by {{post.user.username}} on {{post.date}}</div>
      </div>
      <div class="card-body">
        <p class="card-text">{{post.description}}</p>
      </div>
    </div>
{{/each}}